<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LOSS.ResourceTest">
  <ContentPage.Content>
    <StackLayout VerticalOptions="StartAndExpand">
      <Label Text="Description" />
      <Entry x:Name="nameEntry" Text="{Binding Path=description}" Placeholder="description" />
      <Label Text="Type" />
      <Entry x:Name="typeEntry" Text="{Binding Path=type}" />
      <Label Text="Link" />
      <Entry x:Name="urlEntry" Text="{Binding Path=url}" />
      <Button Text="Save" Clicked="OnSaveActivated" />
      <Button Text="Delete" Clicked="OnDeleteActivated" />
      <Button Text="Cancel" Clicked="OnCancelActivated" />
    </StackLayout>
  </ContentPage.Content>
</ContentPage>