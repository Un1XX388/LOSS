<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LOSS.testListViewPage">
  <ContentPage.Content>
    <ListView  x:Name="lstView" RowHeight="60">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <AbsoluteLayout VerticalOptions="Fill" BackgroundColor="Olive">
              <Label Text = "{Binding title}" FontSize="24" AbsoluteLayout.LayoutBounds="0.25, 0.25, 400, 40"/>
              <Label Text = "{Binding subtitle}" AbsoluteLayout.LayoutBounds="50, 35, 200, 25"/>
              <Image Source="{Binding image}"  AbsoluteLayout.LayoutBounds="250.25, 0.25, 50, 50 "/>
            </AbsoluteLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </ContentPage.Content>
</ContentPage>

